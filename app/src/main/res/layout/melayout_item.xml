<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:id="@+id/imageView"

        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundTintMode="add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last message received from Wifi Broadcast ID"
        android:textColor="#060505"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/LastTimeStampTextView"
        android:id="@+id/LastMessage" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignRight="@+id/LastMessage"
        android:layout_alignEnd="@+id/LastMessage"
        android:layout_below="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/LastTimeStampTextView"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/LastMessage"
        android:layout_alignEnd="@+id/LastMessage"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:textColor="#a89898" />


</RelativeLayout>