<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:id="@+id/imageView"

        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/WifiName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi BroadCastID or Wifi Alias"
        android:id="@+id/LastMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="190sp"
        android:layout_marginStart="190sp"
        android:layout_marginTop="10sp"
        android:textSize="20sp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last message received from Wifi Broadcast ID"
        android:id="@+id/WifiName"
        android:layout_below="@+id/LastMessage"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="40sp"/>


</RelativeLayout>